{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    {% include "components/_navbar.html.twig" %}

<div class="container">
    <div class="row my-5 pt-5">
        <div class="col-md-12 text-center">
            <h2>Utilisateur</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card m-2 p-3 shadow border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title h5">{{ user.firstName }} {{ user.lastName }}</h3>
                        <p class="card-subtitle text-muted h6">{{ user.roles ? user.roles|json_encode : '' }}</p>
                        <p class="card-text">{{ user.email }}</p>
                        <p class="card-text">identifiant : {{ user.id }}</p>
                    </div>
                    <div class="d-block text-center">
                        <a href="{{ path('user_index') }}" class="d-block btn btn-secondary rounded-pill">Retour</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning rounded-pill text-light my-1">&#128221;</a>
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
